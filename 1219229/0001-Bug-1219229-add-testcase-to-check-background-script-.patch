+<!DOCTYPE HTML>
+<html>
+<head>
+  <title>Test for attach debugger on a background page</title>
+  <script type="text/javascript" src="/tests/SimpleTest/SimpleTest.js"></script>
+  <script type="text/javascript" src="/tests/SimpleTest/SpawnTask.js"></script>
+  <script type="text/javascript" src="/tests/SimpleTest/ExtensionTestUtils.js"></script>
+  <script type="text/javascript" src="head.js"></script>
+  <link rel="stylesheet" type="text/css" href="/tests/SimpleTest/test.css"/>
+</head>
+<body>
+
+<script type="application/javascript;version=1.8">
+
+let {require} = SpecialPowers.Cu.import("resource://devtools/shared/Loader.jsm", {});
+let {DebuggerClient} = require("devtools/shared/client/main");
+let {DebuggerServer} = require("devtools/server/main");
+
+add_task(function* test_backgroundPageDebuggerAttach() {
+   // Instantiate a minimal server
+   if (!DebuggerServer.initialized) {
+     DebuggerServer.init();
+   }
+   if (!DebuggerServer.createRootActor) {
+     DebuggerServer.addBrowserActors();
+   }
+
+   // Fake a connection to an iframe
+   let transport = DebuggerServer.connectPipe();
+   let conn = transport._serverConnection;
+   let client = new DebuggerClient(transport);
+
+   yield new Promise(function (resolve) {
+     client.connect(function () {
+       resolve();
+     });
+   });
+
+   let extensionData = {
+     files: {
+       "background1.js": "console.log('background1.js')",
+       "background2.js": "console.log('background2.js')",
+       "background3.js": "console.log('background3.js')",
+     },
+     manifest: {
+       id: "test@prova.it",
+       background: {
+         scripts: ["background1.js", "background2.js", "background3.js"]
+       }
+     }
+   };
+   //let extension = ExtensionTestUtils.loadExtension(extensionData);
+  info("load complete");
+
+   if (!extensionData.id) {
+     const uuidGenerator = SpecialPowers.Cc["@mozilla.org/uuid-generator;1"].getService(SpecialPowers.Ci.nsIUUIDGenerator);
+     extensionData.id = uuidGenerator.generateUUID().number;
+   }
+
+   let chromeScript = SpecialPowers.loadChromeScript(
+     SimpleTest.getTestFileURL("file_ext_load_extension.js"));
+
+   let installed = new Promise((resolve, reject) => {
+     chromeScript.addMessageListener("loaded-extension", resolve);
+   });
+
+   chromeScript.sendAsyncMessage("load-extension", extensionData);
+
+   yield installed;
+
+   info("installation complete");
+
+   // set a fake global for the addoon (this is usually done from the XPIProvider)
+   DebuggerServer.setAddonOptions(extensionData.id, {
+     global: window
+   });
+
+   let listAddons = yield new Promise((resolve) => {
+     client.listAddons((response) => {
+       response = SpecialPowers.wrap(response);
+       resolve(response);
+     });
+   });
+
+   info("search addon in the debugger list addons reply");
+
+   let form = SpecialPowers.wrap(listAddons)["addons"].filter((ext) => {
+     return SpecialPowers.wrap(ext).id == extensionData.id;
+   })[0];
+
+   let messagesPreAttach = yield new Promise((resolve, reject) => {
+     let messages = [];
+
+     client.attachConsole(form.consoleActor, ["ConsoleAPI"], (aResponse, aWebConsoleClient) => {
+       aResponse = SpecialPowers.wrap(aResponse);
+       aWebConsoleClient = SpecialPowers.wrap(aWebConsoleClient);
+
+       if (aResponse.error) {
+         dump(`ERROR: ${aResponse.error}\n`);
+         reject();
+       }
+       else {
+         client.addListener("consoleAPICall", (evt, res) => {
+           messages.push(SpecialPowers.wrap(res));
+
+           if (messages.length >= 3) {
+             resolve(messages);
+           }
+         });
+         aWebConsoleClient.startListeners(["consoleAPICall"]);
+       }
+     });
+   })
+
+   ok(messagesPreAttach.length >= 3, "console messages received");
+   is(messagesPreAttach[0].message.arguments[0], "background1.js", "background1.js log received");
+   is(messagesPreAttach[1].message.arguments[0], "background2.js", "background2.js log received");
+   is(messagesPreAttach[2].message.arguments[0], "background3.js", "background3.js log received");
+
+   info("attach the addon thread");
+
+   let addonActor = yield new Promise((resolve) => {
+     client.attachAddon(form.actor, (response) => {
+       response = SpecialPowers.wrap(response);
+
+       client.attachThread(response.threadActor, (response, threadClient) => {
+         threadClient = SpecialPowers.wrap(threadClient);
+         response = SpecialPowers.wrap(response);
+         if (threadClient.paused) {
+           threadClient.resume();
+         }
+         resolve();
+       })
+     });
+   });
+
+   info("reload the addon");
+
+   chromeScript.sendAsyncMessage("load-extension", extensionData);
+   //client.setAddonOptions(extensionData.id, { global: {} });
+
+   let waitConsoleMessages = new Promise((resolve, reject) => {
+     let messages = [];
+
+     client.attachConsole(form.consoleActor, ["ConsoleAPI"], (aResponse, aWebConsoleClient) => {
+       aResponse = SpecialPowers.wrap(aResponse);
+       aWebConsoleClient = SpecialPowers.wrap(aWebConsoleClient);
+
+       if (aResponse.error) {
+         dump(`ERROR: ${aResponse.error}\n`);
+         reject();
+       }
+       else {
+         client.addListener("consoleAPICall", (evt, res) => {
+           messages.push(SpecialPowers.wrap(res));
+
+           if (messages.length >= 3) {
+             resolve(messages);
+           }
+         });
+         aWebConsoleClient.startListeners(["consoleAPICall"]);
+       }
+     });
+   })
+
+   messages = yield waitConsoleMessages;
+
+   ok(messages.length >= 3, "console messages received");
+   is(messages[0].message.arguments[0], "background1.js", "background1.js log received");
+   is(messages[1].message.arguments[0], "background2.js", "background2.js log received");
+   is(messages[2].message.arguments[0], "background3.js", "background3.js log received");
+
+  info("extension unloaded successfully");
+});
+
+</script>
