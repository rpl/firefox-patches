+<!DOCTYPE HTML>
+<html>
+<head>
+  <title>Test for simple WebExtension</title>
+  <script type="text/javascript" src="/tests/SimpleTest/SimpleTest.js"></script>
+  <script type="text/javascript" src="/tests/SimpleTest/SpawnTask.js"></script>
+  <script type="text/javascript" src="/tests/SimpleTest/ExtensionTestUtils.js"></script>
+  <script type="text/javascript" src="head.js"></script>
+  <link rel="stylesheet" type="text/css" href="/tests/SimpleTest/test.css"/>
+</head>
+<body>
+
+<script type="application/javascript;version=1.8">
+
+add_task(function* test_messenger() {
+  let extension = ExtensionTestUtils.loadExtension({
+    background: "(" + function() {
+      // based on es5-shim / object.keys code
+      var has = Object.prototype.hasOwnProperty;
+      var blacklistedKeys = {
+        $window: true,
+        $console: true,
+        $parent: true,
+        $self: true,
+        $frames: true,
+        $webkitIndexedDB: true,
+        $webkitStorageInfo: true,
+      };
+      var expectedValues = {
+        screenX: 0,
+        screenY: 0,
+        outerWidth: 0,
+        outerHeight: 0
+      };
+
+      var hasAutomationEqualityBug = (function () {
+        /* global window */
+        if (typeof window === 'undefined') { return false; }
+        for (var k in window) {
+          try {
+            if (!blacklistedKeys['$' + k]) {
+              // NOTE: accessing the property generates the exceptions
+              if (k in expectedValues) {
+                browser.test.assertEq(expectedValues[k], window[k],
+                                      `should return the expected value for window property: ${k}`)
+              } else {
+                window[k];
+              }
+            }
+          } catch(e) {
+            browser.test.assertEq(null, e, `unexpected exception accessing window property: ${k}`)
+          }
+        }
+
+        return false;
+      }());
+      browser.test.notifyPass("background.OOM.done")
+    } + ")();"
+  });
+  info("load complete");
+  yield extension.startup();
+  info("startup complete");
+  yield extension.awaitFinish("background.OOM.done")
+  yield extension.unload();
+  info("extension unloaded successfully");
+});
+
+</script>
